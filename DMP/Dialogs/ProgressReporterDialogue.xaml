<Window x:Class="DMP.Dialogs.ProgressReporterDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMP.Dialogs"
        mc:Ignorable="d"
        Title="frmProgressReporter" Height="300" Width="300">
    
        <StackPanel>
            <StackPanel>
                <Image Name="imgWarning" Source="/Resources/imgs/logo.png" Width="32" Height="32"  Margin="20,0" />
            <Label Name="lblProgressMessage"  >Progress</Label>
            <Label Name="linkLabel1"  >LinkLabel1</Label>
        </StackPanel>
            <StackPanel>
                <ProgressBar Name="progressBar1" ValueChanged="progressbar1_ValueChanged" Height="20" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button IsDefault="True" Name="btnDialogOk" MinWidth="60" Click="btnClose_Click">Ok</Button>
                <Button Name="btnCancel" IsCancel="True" MinWidth="60">Cancel</Button>
                <Button Name="btnClose" IsCancel="True" MinWidth="60">Close</Button>
        </StackPanel>
        </StackPanel>

</Window>
